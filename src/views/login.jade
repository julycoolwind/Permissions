doctype html
html
    head
        title= title
        link(rel="stylesheet",href="/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet",href="/stylesheets/signIn.css")
        meta(name="viewport",content="width=device-width,initial-scale=1.0")
    body
        .container
            .alert.alert-dismissable.alert-danger.hidden
                button.close(type="button",data-dismiss="alert",aria-hidden="true") &times;
            form.signIn-form(role="form")
                div
                    h2 登录 #{title}
                div
                    input.form-control(id="signInMark",type="text",placeholder="用户名或邮箱",check-type="required")
                    input.form-control(id="pwd",type="password",placeholder="密码",check-type="required",min-length="8")
                div
                    label
                        input(id="saveStates",type="checkbox",checked="true")
                        span 下次自动登录
                div
                    button.btn.btn-lg.btn-primary.btn-block(type="button",id="login") 登录
                div
                    a 注册
        script(src="/javascripts/lib/jquery-1.11.0.js")
        script(src="/bootstrap/js/bootstrap.min.js")
        script(src="/javascripts/lib/bootstrap3-validation.js")
        script(src="/javascripts/login.js")